<plugin>
   
    <extension point="org.eclipse.wst.common.project.facet.core.facets">

	  <project-facet id="cloudfoundry.standalone.app"> 
	    <label>Cloud Foundry Standalone Application</label>
	    <description>Standalone applications can be deployed to a Cloud Foundry server instance.</description>
	  </project-facet>
	
	  <project-facet-version facet="cloudfoundry.standalone.app" version="1.0">
	    <action type="INSTALL">
	          <delegate class="org.eclipse.cft.server.standalone.internal.application.StandaloneFacetHandler$CFFacetInstallDelegate"/>
	    </action>
	    <action type="UNINSTALL">
	       <delegate class="org.eclipse.cft.server.standalone.internal.application.StandaloneFacetHandler$CFFacetUninstallDelegate"/>
	    </action>
	  </project-facet-version>   
   </extension>
   
      <extension
         point="org.eclipse.wst.server.core.moduleArtifactAdapters">
      <moduleArtifactAdapter
            class="org.eclipse.cft.server.standalone.internal.application.StandaloneArtifactAdapter"
            id="org.eclipse.cft.server.core.StandaloneArtifactAdapter"
            priority="1">
         <enablement>
            <with variable="selection">
               <adapt type="org.eclipse.core.resources.IProject">
               </adapt>
            </with>
         </enablement>
      </moduleArtifactAdapter>
   </extension>
   
    <extension
         point="org.eclipse.wst.server.core.moduleFactories">
      <moduleFactory
            class="org.eclipse.cft.server.standalone.internal.application.StandAloneModuleFactory"
            id="org.eclipse.cft.server.core.StandAloneModuleFactory"
            order="1"
            projects="true">
         <moduleType
         	types="cloudfoundry.standalone.app"
         	versions="1.0"/>
      </moduleFactory>
   </extension>
   
    <extension
          point="org.eclipse.cft.server.core.application">
       <applicationDelegate
             class="org.eclipse.cft.server.standalone.internal.application.StandaloneApplicationDelegate"
             priority="Medium"
             providerID="org.eclipse.cft.server.application.standalone">
          <moduleID
                id="cloudfoundry.standalone.app">
          </moduleID>
       </applicationDelegate>
    </extension>
    
    <extension
         point="org.eclipse.wst.server.core.moduleTypes">
      <moduleType
            id="cloudfoundry.standalone.app"
            name="Cloud Foundry Standalone Application">
      </moduleType>
   </extension>
    
    <extension point="org.eclipse.ui.menus">
    <menuContribution
          allPopups="true"
          class="org.eclipse.cft.server.standalone.internal.ui.ProjectExplorerMenuFactory"
          locationURI="popup:org.eclipse.ui.projectConfigure?endof=additions">
    </menuContribution>
	</extension>
	
    <extension
          point="org.eclipse.cft.server.ui.applicationWizard">
       <applicationWizardDelegate
             class="org.eclipse.cft.server.standalone.internal.ui.StandaloneApplicationWizardDelegate"
             providerID="org.eclipse.cft.server.application.standalone">
       </applicationWizardDelegate>
    </extension>

</plugin>
